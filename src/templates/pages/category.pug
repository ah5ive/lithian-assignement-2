block vars

block content
		.content.landing-page
			.container
				.row
					.col-12
						.section-navi
							h2 Selected Category
				.row.justify-content-center
					.col-12
						.card.category-list
							h4.title YA Collections
							.row
								.col-md-3
									a.feature-card(href="#")
										.feature-image
											img(src="https://picsum.photos/id/343/300/200")
										.feature-title
											p.caption Feature
											each book, index in young_adults
												if index === 0
													h6 !{book.title}
								.col-md-9
									ul.row.mt-2.mt-md-0
										each book in young_adults
											li.col-md-3
												a(href="#")
													p.text-truncate.mb-2 !{book.title}
